#!/bin/bash

RESTORE_PATH=`pwd`
#SCRIPT_PATH="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)/$(basename "${BASH_SOURCE[0]}")"
SCRIPT_PATH="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

if [ ! -z "$SCRIPT_PATH" ]
then
  cd "$SCRIPT_PATH"
  cd "../checkstyle"

  if [ -f "checkstyle-8.16-all.jar" ]
  then
    java -jar checkstyle-8.16-all.jar $*
  else
    echo 'checkstyle-8.16-all.jar can not be found'
  fi

  cd "$RESTORE_PATH"
else
  echo 'Path pointing to right script directory can not be found'
fi
